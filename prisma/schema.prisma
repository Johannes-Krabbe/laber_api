generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    phoneNumber         String  @unique
    phoneNumberHash     String  @unique
    onboardingCompleted Boolean @default(false)

    username            String? @unique
    profilePicture      String?
    name                String?

    phoneNumberDiscoveryEnabled Boolean @default(true)
    usernameDiscoveryEnabled    Boolean @default(true)

    // --- Relationships ---
    devices Device[]
    Otp     Otp[]
}

model Otp {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    code  String
    valid Boolean @default(true)
    used  Boolean @default(false)

    // --- Relationships ---
    user   User   @relation(fields: [userId], references: [id])
    userId String
}

model Device {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name String

    // --- Relationships ---
    userId String
    user   User   @relation(fields: [userId], references: [id])

    identityKeyId String      @unique
    identityKey   IdentityKey @relation(fields: [identityKeyId], references: [id])

    signedPreKeyId String       @unique
    signedPreKey   SignedPreKey @relation(fields: [signedPreKeyId], references: [id])

    oneTimePreKeys OneTimePreKey[]

    mailbox Mailbox?

    sendMessages Message[]
}

model Mailbox {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // --- Relationships ---
    deviceId String @unique
    device   Device @relation(fields: [deviceId], references: [id])

    Message Message[]
}

model Message {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    message String

    // --- Relationships ---
    mailboxId String
    mailbox   Mailbox @relation(fields: [mailboxId], references: [id])

    senderDeviceId String
    senderDevice   Device @relation(fields: [senderDeviceId], references: [id])
}

model IdentityKey {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    key       String

    // --- Relationships ---
    device Device?
}

model SignedPreKey {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    signature String
    key       String

    // --- Relationships ---
    devices Device?
}

model OneTimePreKey {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    key String

    // --- Relationships ---
    device   Device @relation(fields: [deviceId], references: [id])
    deviceId String
}
